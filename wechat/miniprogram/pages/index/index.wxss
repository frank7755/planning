::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.msg-item {
  width: 100%;
  height: 85rpx;
  /*border-bottom: 1px solid rgb(233, 233, 233);*/
  position: relative;
  left: 0;
  top: 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.msg {
  width: 100%;
  height: 85rpx;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: #fff;
  /*border-bottom: 1rpx solid rgb(233, 233, 233);*/
  vertical-align: middle;
  margin: o auto;
}

.header-img {
  position: absolute;
  width: 100rpx;
  height: 45rpx;
  left: 30rpx;
  top: 40rpx;
  border-radius: 10%;
}

.site-img {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
  top:50%;
  transform: translateY(-50%)
}

.user-name {
  position: absolute;
  left: 150rpx;
  font-weight: 600;
  font-size: 35rpx;
}

.msg-text {
  position: absolute;
  left: 90rpx;
  font-size: 80%;
  top: 50%;
  /*color: rgb(127, 127, 127);*/
  transform: translateY(-50%);
}

.msg-text-complete{
  color: green;
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 75rpx;
  /*left: 0;
  top: 0;*/
  z-index: 0;
}

.menu-delete {
  position: absolute;
  width: 150rpx;
  height: 85rpx;
  top: 0;
  right: 0;
  background-color: rgb(255, 58, 50);
  color: #fff;
  text-align: center;
  line-height: 85rpx;
}

.menu-mark {
  position: absolute;
  width: 200rpx;
  height: 85rpx;
  top: 0rpx;
  right: 150rpx;
  background-color: rgb(200, 199, 205);
  color: #fff;
  text-align: center;
  line-height: 85rpx;
}

.msg-check-container {
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  top: 50%;
  padding: 0;
  transform: translateY(-50%);
}

.msg-check{
  position: absolute;
  top: 50%;
  transform: translateY(-50%) scale(1);
}